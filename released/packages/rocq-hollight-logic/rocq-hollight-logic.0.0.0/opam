opam-version: "2.0"
synopsis: "HOL-Light library necessary for translating unify"
description: """
This library contains an automatic translation in Rocq of the
HOL-Light Logic library using https://github.com/Deducteam/hol2dk.
"""
homepage: "https://github.com/Deducteam/rocq-hollight-logic"
dev-repo: "git+https://github.com/Deducteam/rocq-hollight-logic.git"
bug-reports: "https://github.com/Deducteam/rocq-hollight-logic/issues"
doc: "https://github.com/Deducteam/rocq-hollight-logic"
maintainer: "antoine.gontard@inria.fr"
authors: ["Antoine Gontard"]
license: "CeCILL-2.1"
depends: [
  "rocq-prover" {>= "9.0"}
  "coq-mathcomp-classical" {>= "1.8.0"}
  "coq-fourcolor-reals" {>= "1.4.0"}
  "rocq-mathcomp-hollight-real-with-N" {>= "0.0.0"}
  "rocq-equations" {>= "1.3.1+9.0"}
  "rocq-hollight-logic-unif" {>= "0.0.0"}
]
build: [make "-j%{jobs}%"]
install: [make "install"]
